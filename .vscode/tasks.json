{
    "version": "0.1.0",
    "command": "sh",
    "args": ["-c"],
    "showOutput": "always",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "_runner": "terminal",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "cmake",
            "args": ["cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."]
        },
        {
            "taskName": "make",
            "args": ["make -j 8"],
            "isBuildCommand": true            
        },
        {
            "taskName": "test",
            "args": ["ctest --output-on-failure"]
        }
    ]
}